---
layout: layouts/base.njk
---
{{ comp.SiteNav() | safe }}

<header class="tdbc-hero">
  <div class="tdbc-container">
    <h1 class="text-mz tdbc-mb-none tdbc-page-title">
    {{ title }}
    {%- if titleImage -%}
    <img class="page-title-icon" src="{{ titleImage }}" />
    {%- endif -%}
    </h1>
    {%- if description -%}
    <h2 class="text-lg leading-snug mb-4 tracking-tighter tdbc-content-maxlength text-gray-500 tdbc-mt-md mr-auto ml-auto">
      {{ description }}
    </h2>
    {%- endif -%}
  </div>
</header>
<main class="tdbc-container">
  <article class="mr-auto ml-auto">
    {{ content | safe }}
    <hr class="link-separator" />
    {{ comp.ArticleRanking() | safe }}
    {{ comp.FooterLinks() | safe }}
  </article>
  {%- initClipboardJS %}
  {%- mermaidTag %}
</main>
