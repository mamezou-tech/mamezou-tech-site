{
  "compilerOptions": {
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A -",
    "build": "deno task lume",
    "serve": "deno task lume --serve --quiet",
    "lint": "deno run -A --lock deno-lint.lock lint.ts"
  },
  "importMap": "import_map.json",
  "fmt": {
    "exclude": ["src/pages", "src/posts", "src/css", "src/events", "src/img"],
    "include": ["lume/**/*.ts", "_config.ts", "src/**/*.ts", "src/**/*.tsx", "lint.ts"]
  }
}
