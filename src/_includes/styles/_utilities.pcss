.tdbc-content-maxlength {
  max-width: 80ch;
}

.tdbc-anchor {
  display: inline-block;
  margin-left: 0.25em;
  transition: 180ms opacity ease-in-out;
  opacity: 0.6;
  vertical-align: top;

  &:hover {
    opacity: 1;
  }
}

.section-header {
  margin-bottom: 1.0rem;
  &:has(h1) {
    margin-top: 5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #4F4350;
  }
  &:has(h2) {
    margin-top: 4rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #827583;
  }
  &:has(h3) {
    margin-top: 2rem;
  }
  h1,h2,h3,h4 {
    display: inline;
  }
}

$tdbc-alignments: left, center, right !default;

@each $alignment in $tdbc-alignments {
  .tdbc-text-align--$alignment {
    text-align: $alignment;

    @if ($alignment == "center") {
      > a {
        align-self: center !important;
      }
    }
  }
}

@each $key in $tdbc-background-colors {
  .tdbc-background--$key {
    background-color: tdbc-color($key);
  }
}

@each $key in $tdbc-ink-colors {
  .tdbc-ink--$key,
  a.tdbc-ink--$key {
    color: tdbc-color($key);
  }

  .tdbc-ink--$key > a:not(.tdbc-button) {
    color: inherit;
  }
}

.tdbc-mx-auto {
  margin-right: auto;
  margin-left: auto;
}

@each $key, $unit in $tdbc-spacing {
  .tdbc-my-$key {
    margin-top: $unit;
    margin-bottom: $unit;
  }

  .tdbc-mt-$key {
    margin-top: $unit;
  }
}

.tdbc-mb-none {
  margin-bottom: 0;
}

@keyframes fadeInAnimation {
  0% { opacity: 0; }
  100% { opacity: 1; }
}
