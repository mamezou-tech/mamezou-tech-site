.event {
  display: flex;
  flex-direction: column;
  justify-content: center;
  > * + * {
    margin-top: 2rem;
  }
  table {
    margin: 0.5rem;
    border-collapse: collapse;
    width: 96%;
    word-break: break-word;
  }
  th {
    width: 200px;
  }
  tr:nth-child(odd) {
    background-color: #d1dce7;
  }
  td {
    vertical-align: top;
  }
  table, th, td {
    border: 1px solid grey;
    padding: 3px;
  }
  li {
    list-style: none;
  }
  ul {
    padding-top: 10px;
    padding-left: 5px;
  }
  @media only screen and (max-width:568px) {
    thead {
      display:none;
    }
    tbody tr{
      display: block;
      margin-bottom: 2em;
    }
    tbody th, tbody td{
      display:list-item;
      list-style: none;
      border: none;
    }
    tbody th {
      color:#f36;
      text-align:left;
      background:#fff;
    }
    tbody td {
      margin-left: 1em;
    }
  }
}

.event__details {
  opacity: 0.6;
  font-size: 0.9rem;
  > * + * {
    margin-left: 0.5rem;
  }
}

.event__content {
  word-wrap: break-word;
  h1 {
    margin-top: 4rem;
    font-size: 2rem;
  }
}

.event__aside {
  margin-top: 2rem;
}

.event__tags {
  opacity: 0.8;
  font-size: .875rem;
  * + * {
    margin-left: 0.5rem;
  }
}
